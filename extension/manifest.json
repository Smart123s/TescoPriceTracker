{
  "manifest_version": 3,
  "name": "Tesco Price Tracker",
  "version": "1.1.0",
  "description": "Tracks and displays price history charts on Tesco Hungary product pages.",
  "author": "Your Name",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://bevasarlas.tesco.hu/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "https://tesco-price-tracker.tmbpeter.com/*"
  ],

  "background": {
    "scripts": ["background/background.js"],
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://bevasarlas.tesco.hu/groceries/en-HU/products/*",
        "https://bevasarlas.tesco.hu/groceries/hu-HU/products/*",
        "https://bevasarlas.tesco.hu/groceries/*/products/*"
      ],
      "js": ["content/chart.umd.min.js", "content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "tesco-price-tracker@example.com",
      "strict_min_version": "109.0"
    }
  }
}
